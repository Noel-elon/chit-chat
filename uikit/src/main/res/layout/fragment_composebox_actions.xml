<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/message_actions"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:padding="8dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/polls_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/add_a_poll"
        android:drawableTint="@color/grey"
        android:drawableStart="@drawable/ic_poll_24dp"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gallery_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/send_files_from_gallery"
        android:drawableStart="@drawable/ic_photo"
        android:drawableTint="@color/grey"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/camera_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/send_from_camera"
        android:drawableTint="@color/grey"
        android:drawableStart="@drawable/ic_camera"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/file_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/send_files"
        android:drawableStart="@drawable/ic_insert_drive_file_black_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="@color/grey"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/audio_message"
        android:clickable="true"
        android:drawableStart="@drawable/ic_library_music_24dp"
        android:drawableTint="@color/grey"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/send_audio_files"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/location_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_near_me_24dp"
        android:drawableTint="@color/grey"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text="@string/share_location"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/sticker_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/default_sticker"
        android:drawableTint="@color/grey"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text="@string/send_sticker"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

